
extends layout

block content
    div.navbar.navbar-fixed-top
        div.navbar-inner
            div.container-fluid
                ul#global-nav.nav.pull-left
                    a(href='#').brand Control Panel
                button#btn-logout.btn.btn-primary
                    i.icon-lock.icon-white
                    | Sign Out
            div.nav.nav-pills
                li.active(id='rooms')
                    a
                        #view-rooms Dates
                li(id='orderDate')
                    a
                        #order-date Order Date
                li(id='settings')
                    a
                        #account-settins Account settings

    div#room-container.container-fluid
        button#btnBack.fc-button.fc-button-prev.fc-state-default.fc-corner-left Back
        button#btnNext.fc-button.fc-button-next.fc-state-default.fc-corner-left Next
        button#btnToday.fc-button.fc-button-today.fc-state-default.fc-corner-left.fc-corner-right Today
        div#calendar

    #orderDate-container
        button#btnBackOrder.fc-button.fc-button-prev.fc-state-default.fc-corner-left Back
        button#btnNextOrder.fc-button.fc-button-next.fc-state-default.fc-corner-left Next
        button#btnTodayOrder.fc-button.fc-button-today.fc-state-default.fc-corner-left.fc-corner-right Today
        div#calendar2
                        
    include account
    include modals/alert
    include modals/in-or-delete
    include modals/form-errors
    include modals/confirm

block scripts
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/vendor/bootstrap-modal.js')
    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/homePatient.js')
    script(src='/js/controllers/homePatientController.js')
    script(src='/js/form-validators/accountValidator.js')
    script(src='/js/form-validators/dateValidator.js')
    script(src='/js/fullcalendar/lib/jquery-ui.custom.min.js')
    script(src='/js/fullcalendar/fullcalendar.js')
