
extends layout

block content
    div.navbar.navbar-fixed-top
        div.navbar-inner
            div.container-fluid
                ul#global-nav.nav.pull-left
                    a(href='#').brand Control Panel
                button#btn-logout.btn.btn-primary
                    i.icon-lock.icon-white
                    | Sign Out
            div.nav.nav-pills
                li.active(id='rooms')
                    a
                        #view-rooms Dates
                li(id='settings')
                    a
                        #account-settins Account settings
                li(id='meeting')
                    a
                        #meetingRoom Meeting
                        

    div#room-container.container-fluid
        button#btnBack.fc-button.fc-button-prev.fc-state-default.fc-corner-left Back
        button#btnNext.fc-button.fc-button-next.fc-state-default.fc-corner-left Next
        button#btnToday.fc-button.fc-button-today.fc-state-default.fc-corner-left.fc-corner-right Today
        div#calendar
        
    div#meeting-container
        button(type='button')#meeting-btn.btn
        
                        

    include account
    include modals/alert
    include modals/in-or-delete
    include modals/form-errors
    include modals/confirm
    include modals/patientInfo

block scripts
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/vendor/bootstrap-modal.js')
    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/homeDoctor.js')
    script(src='/js/controllers/homeDoctorController.js')
    script(src='/js/form-validators/accountValidator.js')
    script(src='/js/fullcalendar/lib/jquery-ui.custom.min.js')
    script(src='/js/fullcalendar/fullcalendar.js')
